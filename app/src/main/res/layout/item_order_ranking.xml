<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_order_ranking">

    <ImageView
        android:id="@+id/ranking_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/ranking_img_1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/ranking_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:textColor="#242c36"
        android:textSize="12sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@id/ranking_img"
        app:layout_constraintTop_toBottomOf="@id/ranking_img"
        tools:text="라라레스토랑" />

    <ImageView
        android:id="@+id/star_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:src="@drawable/star_3"
        app:layout_constraintStart_toStartOf="@id/ranking_title"
        app:layout_constraintTop_toBottomOf="@id/ranking_title" />

    <TextView
        android:id="@+id/star_point"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="3dp"
        android:layout_marginTop="1dp"
        android:textColor="#242c36"
        android:textSize="12sp"
        app:layout_constraintStart_toEndOf="@id/star_img"
        app:layout_constraintTop_toBottomOf="@id/ranking_title"
        tools:text="4.8" />

    <TextView
        android:id="@+id/grade_amount_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="3dp"
        android:layout_marginTop="1dp"
        android:text="("
        android:textColor="#242c36"
        android:textSize="12sp"
        app:layout_constraintStart_toEndOf="@id/star_point"
        app:layout_constraintTop_toBottomOf="@id/ranking_title" />

    <TextView
        android:id="@+id/grade_amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:textColor="#242c36"
        android:textSize="12sp"
        app:layout_constraintStart_toEndOf="@id/grade_amount_left"
        app:layout_constraintTop_toBottomOf="@id/ranking_title"
        tools:text="705" />

    <TextView
        android:id="@+id/grade_amount_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:text=")"
        android:textColor="#242c36"
        android:textSize="12sp"
        app:layout_constraintStart_toEndOf="@id/grade_amount"
        app:layout_constraintTop_toBottomOf="@id/ranking_title" />

    <TextView
        android:id="@+id/section_point"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginTop="1dp"
        android:text="•"
        android:textColor="#242c36"
        android:textSize="12sp"
        app:layout_constraintStart_toEndOf="@id/grade_amount_right"
        app:layout_constraintTop_toBottomOf="@id/ranking_title" />

    <TextView
        android:id="@+id/distance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginTop="1dp"
        android:textColor="#242c36"
        android:textSize="12sp"
        app:layout_constraintStart_toEndOf="@id/section_point"
        app:layout_constraintTop_toBottomOf="@id/ranking_title"
        tools:text="0.4" />

    <TextView
        android:id="@+id/km"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:text="km"
        android:textColor="#242c36"
        android:textSize="12sp"
        app:layout_constraintStart_toEndOf="@id/distance"
        app:layout_constraintTop_toBottomOf="@id/ranking_title" />


    <TextView
        android:id="@+id/delivery_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="4dp"
        android:text="10~20"
        android:textColor="#e87035"
        android:textSize="12dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/ranking_title"
        app:layout_constraintTop_toBottomOf="@id/ranking_img"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/min"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="분"
        android:textColor="#e87035"
        app:layout_constraintStart_toEndOf="@id/delivery_time"
        app:layout_constraintTop_toBottomOf="@id/ranking_img"
        android:layout_marginTop="10dp"
        android:textSize="12dp"
        />


</androidx.constraintlayout.widget.ConstraintLayout>